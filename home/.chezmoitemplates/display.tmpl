{{- /* ANSI Color codes */ -}}
{{- $reset := "\033[0m" -}}
{{- $bold := "\033[1m" -}}
{{- $blue := "\033[34m" -}}
{{- $cyan := "\033[36m" -}}
{{- $green := "\033[32m" -}}
{{- $yellow := "\033[33m" -}}

{{- define "header" -}}
{{- $text := . -}}
{{- output (printf "\n%s%s⮞  chezmoi -> %s%s\n" $bold $blue $text $reset) -}}
{{- output (printf "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━\n") -}}
{{- end -}}

{{- define "step" -}}
{{- $text := . -}}
{{- output (printf "%s%s➜  %s%s\n" $bold $cyan $text $reset) -}}
{{- end -}}

{{- define "info" -}}
{{- $text := . -}}
{{- output (printf "%s%s  ℹ  %s%s\n" $bold $green $text $reset) -}}
{{- end -}}

{{- define "success" -}}
{{- $text := . -}}
{{- output (printf "%s%s  ✓  %s%s\n" $bold $green $text $reset) -}}
{{- end -}}

{{- define "warn" -}}
{{- $text := . -}}
{{- output (printf "%s%s  ⚠  %s%s\n" $bold $yellow $text $reset) -}}
{{- end -}}

{{- define "error" -}}
{{- $text := . -}}
{{- output (printf "%s%s  ✗  %s%s\n" $bold $blue $text $reset) -}}
{{- end -}}