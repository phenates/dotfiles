{{- /* ANSI Color codes */ -}}
{{- $reset := "\033[0m" -}}
{{- $bold := "\033[1m" -}}
{{- $blue := "\033[34m" -}}
{{- $cyan := "\033[36m" -}}
{{- $green := "\033[32m" -}}
{{- $yellow := "\033[33m" -}}

{{- define "header" -}}
{{- $text := . -}}
{{- writeToStdout (printf "\n%s⮞  chezmoi -> %s%s\n" "\033[1;34m" $text "\033[0m") -}}
{{- writeToStdout (printf "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━\n") -}}
{{- end -}}

{{- define "step" -}}
{{- $text := . -}}
{{- writeToStdout (printf "%s➜  %s%s\n" "\033[1;36m" $text "\033[0m") -}}
{{- end -}}

{{- define "info" -}}
{{- $text := . -}}
{{- writeToStdout (printf "%s  ℹ  %s%s\n" "\033[1;32m" $text "\033[0m") -}}
{{- end -}}

{{- define "success" -}}
{{- $text := . -}}
{{- writeToStdout (printf "%s  ✓  %s%s\n" "\033[1;32m" $text "\033[0m") -}}
{{- end -}}

{{- define "warn" -}}
{{- $text := . -}}
{{- writeToStdout (printf "%s  ⚠  %s%s\n" "\033[1;33m" $text "\033[0m") -}}
{{- end -}}

{{- define "error" -}}
{{- $text := . -}}
{{- writeToStdout (printf "%s  ✗  %s%s\n" "\033[1;31m" $text "\033[0m") -}}
{{- end -}}